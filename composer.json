{
    "name": "govcms/govcms",
    "description": "govCMS Drupal Distribution",
    "type": "drupal-profile",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Joseph Zhao",
            "email": "joseph.zhao@xing.net.au"
        },
        {
            "name": "Jason Guo",
            "email": "jason.guo@xing.net.au"
        },
        {
            "name": "Tim Hurley",
            "email": "tim.hurley@finance.gov.au"
        },
        {
            "name": "ruwanl",
            "email": "ruwan.lk@gmail.com"
        }
    ],
    "homepage": "https://www.govcms.gov.au",
    "support": {
        "issues:": "https://github.com/govCMS/govcms-core/issues",
        "wik": "https://github.com/govCMS/govcms-core/wiki",
        "source": "https://github.com/govCMS/govcms-core/releases"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "harvesthq/chosen",
                "version": "1.7.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/harvesthq/chosen/releases/download/v1.7.0/chosen_v1.7.0.zip",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "^1.2.0"
                }
            }
        }
    ],
    "require": {
        "php": "^5.6.0 || ^7.0",
        "cweagans/composer-patches": "^1.5.0",
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.1.0",
        "govcms/govcms-ui": "dev-master",
        "drupal/core": "^8.4",
        "drupal/admin_toolbar": "^1.19",
        "drupal/adminimal_admin_toolbar": "^1.5",
        "drupal/adminimal_theme": "^1.3",
        "harvesthq/chosen": "^1.7",
        "drupal/chosen": "^2.4",
        "drupal/config_split": "^1.0@beta",
        "drupal/disqus": "^1.0@RC",
        "drupal/ds": "^3.1",
        "drupal/entity_browser": "^1.1",
        "drupal/environment_indicator": "^3.0",
        "drupal/eva": "^1.1",
        "drupal/features": "^3.5",
        "drupal/honeypot": "^1.27",
        "drupal/linkit": "^4.3",
        "drupal/memcache": "^2.0@alpha",
        "drupal/metatag": "^1.2",
        "drupal/module_filter": "^3.0",
        "drupal/panelizer": "^4.0",
        "drupal/paragraphs": "^1.1",
        "drupal/password_policy": "^3.0",
        "drupal/pathauto": "^1.0",
        "drupal/robotstxt": "^1.1",
        "drupal/search_api": "^1.3",
        "drupal/seckit": "^1.0@alpha",
        "drupal/shield": "^1.1",
        "drupal/simple_sitemap": "^2.9",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/token": "^1.0",
        "drupal/username_enumeration_prevention": "^1.0@beta",
        "drupal/views_data_export": "^1.0@alpha",
        "drupal/webform": "^5.0@beta"
    },
    "require-dev": {
        "composer/composer": "^1.5",
        "drush/drush": "~9",
        "phing/phing": "^2.16",
        "phpunit/phpunit": "~4.8 <5",
        "squizlabs/php_codesniffer": "^2.8",
        "drupal/console": "^1.0",
        "drupal/coder": "^8.2",
        "drupal/devel": "^1.0",
        "drupal/drupal-extension": "^3.3"
    },
    "extra": {
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
            "excludes": [
                "sites/development.services.yml"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/profiles/govcms/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/govcms/modules/custom/{$name}": ["type:drupal-custom-module"],
            "docroot/profiles/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "docroot/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "docroot/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {}
    },
    "autoload": {
        "psr-4": {
            "govCMS\\Core\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin/",
        "preferred-install": "dist"
    },
    "conflict": {
        "drupal/core": "7.*"
    },
    "scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold",
            "./bin/phing push"
        ],
        "post-update-cmd": [
            "./bin/phing push",
            "@composer package"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "package": "govCMS\\Core\\Composer\\Package::execute"
    },
    "suggest": {
        "hirak/prestissimo": "^0.3"
    }
}
